<div class="container format-login">
  <div class="row justify-content-center">
    <div class="col-xs-6 col-sm-6 col-sm-offset-6"><br/>
      <div class="form-transaction">
        <%= simple_form_for [@donor, @transaction] do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :purpose %>
          <%= f.input :amount %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Make Payment", class:"btn btn-primary"%>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
