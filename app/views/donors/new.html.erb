<div class="container format-login">
  <div class="row justify-content-center">
    <div class="col-xs-6 col-sm-6 col-sm-offset-6">
      <div class="form-login">
        <h2>Donor Sign up</h2>
        <%= simple_form_for [@user, @donor] do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :company_name, label: "Company Name" %>
            <%= f.input :bank_name, label: "Bank Name" %>
            <%= f.input :bank_account, label: "Bank Account" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
